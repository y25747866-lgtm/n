rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow anyone (even not signed in) to READ trending topics
    match /trending_topics/{docId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid != null;
    }

    // For other collections, only authenticated users can read/write
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
